@model GTR.Ass.MVC.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h1>Product Details</h1>
    <dl class="row">
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Quantity in Stock</dt>
        <dd class="col-sm-10">@Model.QuantityInStock</dd>
    </dl>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
</div>
